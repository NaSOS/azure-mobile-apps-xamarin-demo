<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="GlobalAzureBootcamp2017.MyCircleImage"
	xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions">
	<ContentView.Content>
		<AbsoluteLayout>
			<controls:CircleImage x:Name="CircleImage" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" WidthRequest="{Binding WidthRequest}" HeightRequest="{Binding HeightRequest}" />
			<Image x:Name="Image" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" WidthRequest="{Binding WidthRequest}" HeightRequest="{Binding HeightRequest}" VerticalOptions="Center" HorizontalOptions="Center" Aspect="AspectFill" />
		</AbsoluteLayout>
	</ContentView.Content>
</ContentView>
