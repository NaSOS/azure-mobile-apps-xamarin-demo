<?xml version="1.0" encoding="UTF-8"?>
<TabbedPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="GlobalAzureBootcamp2017.ActivitiesTabbedPage"
	xmlns:viewModels="clr-namespace:GlobalAzureBootcamp2017; assembly=GlobalAzureBootcamp2017"
	xmlns:pages="clr-namespace:GlobalAzureBootcamp2017; assembly=GlobalAzureBootcamp2017"
    xmlns:resources="clr-namespace:GlobalAzureBootcamp2017; assembly=GlobalAzureBootcamp2017"
	BackgroundColor="{StaticResource BackgroundColor}"
	IsBusy="{Binding IsBusy}">
	<TabbedPage.BindingContext>
		<viewModels:ActivitiesTabbedViewModel />
	</TabbedPage.BindingContext>
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="{x:Static resources:Messages.Updates}" Icon="{x:Static resources:Images.Bullhorn}" Clicked="UpdatesItem_Clicked" />
    </ContentPage.ToolbarItems>
</TabbedPage>
